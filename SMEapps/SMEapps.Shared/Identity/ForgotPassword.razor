@page "/identity/forgot"
@inject IHttpClientFactory ClientFactory
@inject IToastService ToastService
@layout IdentityLayout

@* @using Microsoft.Fast.Components.FluentUI *@
@using SMEapps.Shared.Identity

<!-- 1. Full-screen flex container -->
<div class="full-center">
    <!-- 2. Card – keeps the same width you wanted (400 px) -->
    <FluentCard Class="p-4 shadow-lg" Style="width: 400px;">
        <h3 class="text-center mb-4">Forgot Password</h3>

        <EditForm Model="@emailModel" OnValidSubmit="@SendResetEmail" FormName="ForgotPassword">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <FluentTextField @bind-Value="emailModel.Email"
                             Label="Email"
                             Placeholder="Enter your email"
                             Required="true"
                             Style="width: 100%; margin-bottom: 1rem;" />

            <div class="d-flex justify-content-end mt-3">
                <FluentButton Appearance="Appearance.Accent"
                              Type="ButtonType.Submit"
                              Loading="@isLoading">
                    Send Reset Link
                </FluentButton>
            </div>
        </EditForm>
    </FluentCard>
</div>

<!-- 3. Toast container (place once in the layout or here) -->
<FluentToastProvider />